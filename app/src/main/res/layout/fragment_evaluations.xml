<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="woodward.joshua.teacherspet.application.EvaluationsFragment">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_new_evaluation_button"
        android:id="@+id/add_new_evaluation_button"
        android:layout_alignParentBottom="true"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@android:id/list"
        android:layout_above="@+id/add_new_evaluation_button"
        android:layout_alignParentTop="true"/>

</RelativeLayout>